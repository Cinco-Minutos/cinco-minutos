{
  "compilerOptions": {
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es2016", "dom"],
    "downlevelIteration": true,
    "typeRoots": ["src/types"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}